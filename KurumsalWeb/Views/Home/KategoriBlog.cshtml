@model IPagedList<KurumsalWeb.Models.Model.Blog>
@using PagedList;
@using PagedList.Mvc;
@using KurumsalWeb.Helper;
@{
    ViewBag.Title = "KategoriBlog";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}



<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="#"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                    <li class="active">Kategori Blog</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    <article>
                        <div class="post-image">
                            <div class="post-heading">
                                <h3><a href="/BlogPost/@SeoHelper.ToSeoUrl(item.Baslik).ToLower()-@item.BlogId">@item.Baslik</a></h3>
                            </div>
                            <img src="@item.ResimURl" alt="@item.Baslik" />
                        </div>
                        <p>
                            @Html.Raw(item.Icerik.Substring(0, 350))...
                        </p>
                        <div class="bottom-article">
                            <ul class="meta-post">
                                @*<li><i class="icon-calendar"></i><a href="#"> Mar 23, 2013</a></li>
                                    <li><i class="icon-user"></i><a href="#"> Admin</a></li>*@
                                <li><i class="icon-folder-open"></i><a href="#"> @item.Kategori.KategoriAd</a></li>
                                @*<li><i class="icon-comments"></i><a href="#">4 Comments</a></li>*@
                            </ul>
                            <a href="/Home/BlogDetay/@item.BlogId" class="pull-right">Devam. <i class="icon-angle-right"></i></a>
                        </div>
                    </article>
                }

                <div id="pagination">
                    @Html.PagedListPager(Model, sayfa => Url.Action("Blog", new { sayfa }), PagedListRenderOptions.Classic)
                </div>
            </div>
            <div class="col-lg-4">
                <aside class="right-sidebar">
                    <div class="widget">
                        <form class="form-search">
                            <input class="form-control" type="text" placeholder="Ara..">
                        </form>
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Kategoriler</h5>
                        @{
                            Html.RenderAction("BlogKategoriPartial", "Home");
                        }
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Son Blog Kayıtları</h5>
                        <ul class="recent">
                            @{
                                Html.RenderAction("BlogSonKayitPartial", "Home");
                            }
                        </ul>
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Popular tags</h5>
                        <ul class="tags">
                            <li><a href="#">Web design</a></li>
                            <li><a href="#">Trends</a></li>
                            <li><a href="#">Technology</a></li>
                            <li><a href="#">Internet</a></li>
                            <li><a href="#">Tutorial</a></li>
                            <li><a href="#">Development</a></li>
                        </ul>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</section>
